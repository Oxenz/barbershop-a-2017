@media only screen and (min-width 977px)
	.news__wrapper
		width 100%
		max-width 960px

	.news__post
		margin-top 50px

	.news__post:nth-of-type(3)
		display flex

	.news__post:nth-of-type(1n+4)
		display none

	.news__caption
		width 70%
		text-align left
		margin-right auto

	.news__btn-open
		margin-left auto

